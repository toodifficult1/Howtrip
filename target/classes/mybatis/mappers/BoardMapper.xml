<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
    <resultMap id="boardResultMap" type="boardVO">
        <result property="boardId" column="BOARD_ID" />
        <result property="title" column="TITLE" />
        <result property="boardContent" column="BOARD_CONTENT" />
        <result property="views" column="VIEWS" />
        <result property="likeCnt" column="LIKE_CNT" />
        <result property="createdTime" column="CREATED_TIME" />
        <result property="updateTime" column="UPDATE_TIME" />
        <result property="userId" column="USER_ID" />
    </resultMap>

    <!-- 게시글 목록 조회 -->
    <select id="selectAllBoards" resultMap="boardResultMap" >
        <![CDATA[
            SELECT * FROM BOARD
            ORDER BY CREATED_TIME DESC
        ]]>
    </select>

    <!-- 특정 게시글 조회 -->
    <select id="selectBoardById" parameterType="int" resultMap="boardResultMap">
        <![CDATA[
            SELECT * FROM BOARD
            WHERE BOARD_ID = #{boardId}
        ]]>
    </select>

    <!-- 게시글 저장 -->
    <insert id="insertBoard" parameterType="boardVO">
        <![CDATA[
            INSERT INTO BOARD (BOARD_ID, TITLE, BOARD_CONTENT, VIEWS, LIKE_CNT, CREATED_TIME, UPDATE_TIME, USER_ID)
            VALUES (#{boardId}, #{title}, #{boardContent}, #{views}, #{likeCnt}, #{createdTime}, #{updateTime}, #{userId})
        ]]>
    </insert>

    <!-- 게시글 수정 -->
    <update id="updateBoard" parameterType="boardVO">
        <![CDATA[
            UPDATE BOARD
            SET TITLE = #{title}, BOARD_CONTENT = #{boardContent}, VIEWS = #{views}, LIKE_CNT = #{likeCnt}, 
                CREATED_TIME = #{createdTime}, UPDATE_TIME = #{updateTime}, USER_ID = #{userId}
            WHERE BOARD_ID = #{boardId}
        ]]>
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        <![CDATA[
            DELETE FROM BOARD
            WHERE BOARD_ID = #{boardId}
        ]]>
    </delete>

    <!-- 게시글 조회수 업데이트 -->
    <update id="updateViews" parameterType="int">
        <![CDATA[
            UPDATE BOARD
            SET VIEWS = VIEWS + 1
            WHERE BOARD_ID = #{boardId}
        ]]>
    </update>

    <!-- 게시글 좋아요 수 업데이트 -->
    <update id="updateLikeCnt" parameterType="int">
        <![CDATA[
            UPDATE BOARD
            SET LIKE_CNT = LIKE_CNT + 1
            WHERE BOARD_ID = #{boardId}
        ]]>
    </update>
</mapper>